{
  "short_name": "ReactPass",
  "name": "ReactPassÂ® Password Manager",
  "version": "1.0.0",
  "manifest_version": 2,
  "icons": {
    "16": "logo512_blue.png",
    "48": "logo512_blue.png",
    "128": "logo512_blue.png"
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "ReactPass Password Manager"
  },
  "permissions": [
    "storage",
    "tabs",
    "privacy",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": [
        "./static/js/content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "assets/manifestIcons/icon.svg",
    "index.html"
  ]
}
